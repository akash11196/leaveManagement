

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@leave) do |f| %>
      

      <%= f.label :reason %>
      <%= f.text_field :reason %>

      <%= f.label :leave_date %>
      <%= f.date_field :leave_date %>

    

      <%= f.submit "Create Leave", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>